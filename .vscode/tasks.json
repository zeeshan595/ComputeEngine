{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",    //Command name
            "command": "g++",       //Use g++ compiler
            "args": [
                "main.cpp",         //Input file to build
                "-g",               //Enable debuging
                "-std=c++11",       //Use c++ 11
                "-lvulkan",         //Use vulkan
                "-obuild"           //Build output
            ]
        }
    ]
}